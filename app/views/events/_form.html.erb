<%= form_for @event do |f| %>
<fieldset>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :kase_id %>
  
  <ol class="section fourth">
    <li>
      <%= f.label :user_id, "By" %>
      <%= f.collection_select :user_id, @users, :id, :email %>
    </li>
    
    <li>
      <%= f.label :date, "Date" %>
      <%= f.text_field :date, :class => "datepicker", :placeholder => "yyyy-mm-dd" %>
    </li>
    
    <li>
      <%= f.label :start_time %>
      <%= f.text_field :start_time, :value => @event.start_time, :class => "timepicker" %>
    </li>

    <li>
      <%= f.label :end_time %>
      <%= f.text_field :end_time, :value => @event.end_time, :class => "timepicker" %>
    </li>

    <li>
      <%= f.label :event_type_id, "Type" %>
      <%= f.collection_select :event_type_id, @event_types, :id, :name %>
    </li>
    
    <li>
      <%= f.label :funding_source_id, "Funding Source" %>
      <%= f.collection_select :funding_source_id, @funding_sources, :id, :name %>
    </li>
    
    <li>
      <%= f.label :duration_in_hours, "Hours" %>
      <%= f.text_field :duration_in_hours %>
    </li>

    <li>
      <%= f.label :notes %>
      <%= f.text_area :notes, "data-behavior" => "autoresize" %>
    </li>
  </ol>
  
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
</fieldset>
<% end %>
